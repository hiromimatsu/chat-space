.chat-side
  .side-header
    .side-header__box
      .side-header__box__name
        = current_user.name
      .side-header__box__menu
        .side-header__box__menu__edit
        = link_to new_group_path do
          =icon('fas','edit')
        .side-header__box__menu__cog
        = link_to edit_user_path(current_user) do
          =icon('fas','cog')
  .side-group
    - current_user.groups.each do |group|
      .side-group__list
        = link_to '#' do
          .side-group__list__name
          = group.name
          .side-group__list__message
            メッセージはまだありません